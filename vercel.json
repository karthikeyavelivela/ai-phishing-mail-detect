{
    "rewrites": [
        {
            "source": "/((?!assets/|favicon.png|favicon.ico|manifest.json|robots.txt|sw.js|.*\\.js|.*\\.css|.*\\.png|.*\\.svg).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(index.html)?",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}